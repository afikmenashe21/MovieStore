@model MovieStore.Models.Actor

@{
    ViewData [ "Title" ] = "Edit";
}
<link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
<link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
<link href="~/css/multiselect.css" rel='stylesheet' type='text/css' />
<script src="~/js/Editform.js"></script>
<div class="container">

    <form class="well form-horizontal" asp-action="Delete" id="contact_form">
        <fieldset>
            <h3>Are you sure you want to delete this?</h3>

            <!-- Name input-->

            <div class="form-group">
                <label class="col-md-4 control-label">Name</label>
                <div class="col-md-4 inputGroupContainer">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input disabled asp-for="Name" class="form-control" />
                    </div>
                </div>
            </div>

            <!-- Movies input-->

            <div class="form-group">
                <label class="col-md-4 control-label">Movies</label>
                <div class="col-md-4 inputGroupContainer">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-film"></i></span>
                        <span class="multi-select-movies"></span>
                    </div>
                </div>
                <input disabled id="listmovies" name="movies" class="form-control" type="hidden" />
            </div>

            <!-- Button -->

            <div class="form-group">
                <label class="col-md-4 control-label"></label>
                <div class="col-md-4">
                    <a class="btn btn-warning" href='javascript:history.go(-1)'><span class="glyphicon glyphicon-arrow-left"></span>   </a>
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </div>
            </div>
        </fieldset>
    </form>
</div>

<script src="~/js/bundle.min.js"></script>
<script src="~/js/Multiselect/Actor.js"></script>

@section Scripts {
    @{await Html.RenderPartialAsync( "_ValidationScriptsPartial" );}
}
