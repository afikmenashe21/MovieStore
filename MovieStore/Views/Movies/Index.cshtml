@model IEnumerable<MovieStore.Models.Movie>

@{
    ViewData [ "Title" ] = "Index";
    Layout = "_Layout2";
}

<section class="slider">
    <div class="flexslider">
        <ul class="slides list-unstyled">
            @foreach ( var movie in Model )
                {

                <li>
                    <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id">
                        <div class="agile_tv_series_grid ">
                            <div class="col-md-2 agile_tv_series_grid_left">
                                <div class="w3ls_market_video_grid1">
                                    <img src="@movie.Poster" alt=" " class="img-responsive" />
                                </div>
                            </div>
                            <div class="col-md-10 agile_tv_series_grid_right">
                                <p class="fexi_header">@movie.Name</p>
                                <p class="fexi_header_para"><span class="conjuring_w3">Story Line<label>:</label></span>@movie.Storyline</p>
                                <p class="fexi_header_para"><span>Date of Release<label>:</label></span> @movie.ReleaseDate.ToShortDateString() </p>
                                <p class="fexi_header_para fexi_header_para1">
                                    <span>Star Rating<label>:</label></span>
                                    @{

                                        int intAverageRating = (int) Math.Floor( movie.AverageRating ); // 7.3 -> 7
                                        for ( int i = 0 ; i < intAverageRating ; i++ ) // 7
                                            {
                                            <a href="#"><i class="fa fa-star" aria-hidden="true"></i></a>
                                            }
                                        if ( movie.AverageRating - intAverageRating > 0 ) // 7.5 - 7 = 0.5
                                            {
                                            <a href="#"><i class="fa fa-star-half-o" aria-hidden="true"></i></a>
                                            }
                                        else
                                            {
                                            <a href="#"><i class="fa fa-star-o" aria-hidden="true"></i></a>
                                            }
                                        for ( int i = 1 ; i < 10 - intAverageRating ; i++ ) //10-7 = 3
                                            {
                                            <a href="#"><i class="fa fa-star-o" aria-hidden="true"></i></a>
                                            }
                                    }
                                </p>
                            </div>
                        </div>
                    </a>
                </li>

                }

        </ul>
    </div>
</section>